<div class="container-fluid">
    <div class="row d-flex justify-content-around">
        <div class="col-7" id="messageColumn">
            <div class="p-2">
                <div class="row">
                    <div class="col">
                        <input type="text" id="usernameInput" class="form-control w-100" placeholder="Username" />
                    </div>
                    <div class="col">
                        <button class="btn btn-primary w-100" id="connectBtn" type="submit">Join random room</button>
                    </div>
                    <div class="col">
                        <button class="btn btn-danger w-100" id="disconnectBtn" type="submit" disabled>Disconnect</button>
                    </div>
                </div>
            </div>
            <div class="p-2" id="messageBoardSection">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody id="messageList">
                    </tbody>
                </table>
            </div>
            <div class="p-2">
                <div class="row">
                    <div class="col-8">
                        <input type="text" id="messageVal" class="form-control" />
                    </div>
                    <div class="col-4">
                        <button type="submit" id="sendBtn" class="btn-primary btn w-100">Send</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4" id="groupSection">
            <table class="table table-bordered" id="groupNameTable">
                <thead>
                    <tr>
                        <th>Group number</th>
                        <th>Group name</th>
                        <th>Capacity</th>
                        <th>Controls</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js"></script>

